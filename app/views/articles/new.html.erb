<h1>Create a new article</h1>

<% if @article.errors.any? %>
    <h3>The following errors prevented your article form saving:</h3>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with scope: :article, data: { turbo: false }, url: articles_path, local: true do |f| %>
<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back to Articles List', articles_path %>