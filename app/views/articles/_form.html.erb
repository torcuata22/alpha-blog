
<div class="container">
    <div class="row justify-content-center">
        <%= render 'shared/errors', obj: @article %>
        <div class="col-10">
            
            <%= form_with(model: @article,local: true, data: { turbo: false }) do |f| %>
                <div class="row form-group">
                    <%= f.label :title, class:"col-2 col-form-label form-label-text fw-bold" %>
                    <div class="col-10">
                        <%= f.text_field :title, class:"form-control shadow", placeholder:"Article title" %>
                    </div>

                </div>

                <div class="row form-group">
                        <%= f.label :description, class:"col-2 col-form-label form-label-text fw-bold" %><br>
                        <div class="col-10">
                            <%= f.text_area :description, rows:10, class:"form-control mt-3 shadow",placeholder:"Article description" %>
                        </div>
                    
                </div>
                        <%= f.submit class:"btn btn-article btn-lg mt-3" %>
                        <%= link_to 'Back to Articles List', articles_path, class: "btn btn-article btn-lg mt-3" %>
            </div>
        </div>
        <% end %>

    </div>
</div>